            {% for code, name in eventsOnDateByDate %}
                <h4 class = "existing_thing" value="{{code}}">{{name[2]}} at {{name[0]}} for {{name[1]}} minutes</h4>
            {% endfor %}
            {% for code, name in eventsOnDateByDay %}
