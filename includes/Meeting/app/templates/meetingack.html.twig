{% extends 'banner.html.twig' %}
{% block content %}
    <head>
        <title>New meeting invites</title>
    </head>
<div id = "calendar_page">
    <body>

        {{ error }}
        <div class = "menu-list">
            <ul>
                <li><a href="{{ landing_page }}">Home</a></li>
                <li><a href="{{ upcoming_meetings }}">Scheduled Meetings</a></li>
                <li><a  class = "active" href="{{ meeting_requests }}">New Meeting Requests</a></li>
                <li><a href="{{ hosted_meetings }}">Meetings hosted</a></li>
                <li><a href="{{ edit_profile }}">Account settings</a></li>
                <li><a href="{{ create_event }}">Create event</a></li>
                <li><a href="{{ view_event }}">View event</a></li>
            </ul>
        </div>
        <form class="form_content2" action="{{ action }}" method="{{ method }}">
            <h2 class = "page_header">Pending meeting invites</h2>
        {% for code, name in country_names %}
            <label class="meeting_request">
                  <span class ="info_section">
                      Host: {{ name[4] }}
                      On: {{name[1] }}
                      at {{ name[2] }}
                      for: {{ name[3] }}

                 <a class="accept_meeting" href='meetingackpost?MiD={{ name[0] }}'>Accept</a>
                 <a class ="reject_meeting" href='meetingackpost?MiD=0{{ name[0] }}'>Reject</a>
                  </span>
                <br> <br> <br> <br>
        {% endfor %}

        </form>
    </body>
</div>

{% endblock %}
